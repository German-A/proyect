<?php

require_once "../controladores/productos.controlador.php";
require_once "../modelos/productos.modelo.php";

class AjaxProductos
{


    public $idProducto;

    public $NombrePuesto;

    public $FechaInico;
    public $FechaFin;

    public function ajaxTraerProducto()
    {
        $item  = "idEmpleos";
        $valor = $this->idProducto;
        $respuesta = ControladorProductos::ctrMostrarProductos($item, $valor);
        echo json_encode($respuesta);
    }

    public function ajaxEliminarProducto()
    {
        $item  = "idEmpleos";
        $valor = $this->idProducto;
        $respuesta = ControladorProductos::ctrDeleteProductos($item, $valor);
        echo json_encode($respuesta);
    }

    public function ajaxRegistrarProducto()
    {
        $item  = "idEmpleos";
        $valor = $this->idProducto;

        $respuesta = ControladorProductos::ctrDeleteProductos($item, $valor);
        echo json_encode($respuesta);
    }
    public function ajaxRegistroEmpleo()
    {
        $item  = "idEmpleos";
        $valor = $this->idProducto;

        $NombrePuesto = $_POST['NombrePuesto'];
        $DescripcionPuesto = $_POST['DescripcionPuesto'];
        $InformacionAdicional = $_POST['InformacionAdicional'];

        
        $LugarTrabajo = $_POST['LugarTrabajo'];
        $TrabajoRemoto = $_POST['TrabajoRemoto'];
        $NumeroVacantes = $_POST['NumeroVacantes'];
        $Competencias = $_POST['Competencias'];
       
   
        $Experiencias = $_POST['Experiencias'];
        $TipoContrato = $_POST['TipoContrato'];
        $JornadaLaboral = $_POST['JornadaLaboral'];
        $HorasSemanales = $_POST['HorasSemanales'];
        $HorarioTrabajo = $_POST['HorarioTrabajo'];
        $RemuneracionBruta = $_POST['RemuneracionBruta'];
        $Contacto = $_POST['Contacto'];
        $FechaInico = $_POST['FechaInico'];
        $FechaFin = $_POST['FechaFin'];

        $Idiomas =[];
        $Idiomas = $_POST['Idiomas'];

    



        $FechaInico = $this->FechaInico;
        $FechaFin = $this->FechaFin;
        $respuesta = ControladorProductos::ctrRegistroEmpleo($item, $valor, $NombrePuesto, $DescripcionPuesto, $InformacionAdicional, $LugarTrabajo, $TrabajoRemoto, $NumeroVacantes, $Competencias, $Idiomas, $Experiencias, $TipoContrato, $JornadaLaboral, $HorasSemanales, $HorarioTrabajo, $RemuneracionBruta, $Contacto, $FechaInico, $FechaFin);
        echo json_encode($respuesta);
    }
}

